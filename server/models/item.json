{
  "name": "item",
  "plural": "items",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true,
    "BelongsToIntegrityCheck": false
  },
  "properties": {
    "name": {
      "type": "string",
      "index": {
        "unique": true
      }
    },
    "type": {
      "type": "string",
      "required": true
    },
    "attributes": {
      "type": "object",
      "description": [
        "Contain a variety of attributes depend on item type",
        "Ex: With `formatted text` type, attributes are padding, background colour, etc."
      ]
    }
  },
  "validations": [],
  "relations": {
    "pages": {
      "type": "hasMany",
      "model": "page",
      "foreignKey": "itemId",
      "through": "page_item"
    }
  },
  "acls": [],
  "methods": {}
}
