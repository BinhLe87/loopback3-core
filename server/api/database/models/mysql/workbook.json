{
  "name": "workbook",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true,
    "BelongsToIntegrityCheck": false
  },
  "properties": {
    "title": {
      "type": "string"
    },
    "owner_id": {
      "type": "number"
    },
    "description": {
      "type": "string"
    },
    "price": {
      "type": "number"
    },
    "image_url": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "programs": {
      "type": "hasMany",
      "model": "program",
      "foreignKey": "workbookId",
      "through": "program_workbook"
    },
    "chapters": {
      "type": "hasMany",
      "model": "chapter",
      "foreignKey": "workbookId",
      "through": "workbook_chapter"
    }
  },
  "acls": [
    {
      "permission": "DENY",
      "principalType": "ROLE",
      "principalId": "$everyone"
    },
    {
      "permission": "ALLOW",
      "principalType": "ROLE",
      "principalId": "$authenticated"
    }
  ],
  "methods": {}
}
