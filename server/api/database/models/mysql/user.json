{
  "name": "user",
  "plural": "users",
  "base": "User",
  "idInjection": true,
  "ttl": -1,
  "options": {
    "allowEternalTokens": true,
    "configureModelMerge": {
      "acls": {
        "replace": true
      },
      "relations": {
        "replace": false
      }
    }
  },
  "mixins": {
    "TimeStamp": true,
    "BelongsToIntegrityCheck": false
  },
  "properties": {},
  "validations": [],
  "relations": {
    "settings": {
      "type": "hasMany",
      "model": "user_setting",
      "foreignKey": "userId"
    },
    "notes": {
      "type": "hasMany",
      "model": "user_note",
      "foreignKey": "userId"
    },
    "workbook_shares": {
      "type": "hasMany",
      "model": "workbook",
      "foreignKey": "userId",
      "through": "workbook_share"
    },
    "libraries": {
      "type": "hasMany",
      "model": "library",
      "foreignKey": "userId"
    },
    "workbooks": {
      "type": "hasMany",
      "model": "workbook",
      "through": "workbook_owner",
      "polymorphic": {
        "foreignKey": "workbook_owner_id",
        "discriminator": "workbook_owner_type"
      }
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "prototype.share_workbook": {
      "accepts": [
        {
          "arg": "workbook_id",
          "type": "number",
          "description": "the workbook id would be shared",
          "required": true
        },
        {
          "arg": "sharingProperties",
          "type": "object",
          "description": "sharing settings",
          "required": true
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": {},
      "http": {
        "verb": "post",
        "path": "/share_workbook"
      }
    }
  }
}