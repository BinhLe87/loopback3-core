{
  "name": "chapter",
  "plural": "chapters",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true,
    "BelongsToIntegrityCheck": false
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "workbooks": {
      "type": "hasMany",
      "model": "workbook",
      "foreignKey": "chapterId",
      "through": "workbook_chapter"
    },
    "pages": {
      "type": "hasMany",
      "model": "page",
      "foreignKey": "chapterId",
      "through": "chapter_page"
    }
  },
  "acls": [
    {
      "permission": "DENY",
      "principalType": "ROLE",
      "principalId": "$everyone"
    },
    {
      "permission": "ALLOW",
      "principalType": "ROLE",
      "principalId": "$authenticated"
    }
  ],
  "methods": {}
}
