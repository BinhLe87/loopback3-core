    "message": {
      "type": "string",
      "required": true
    },    
    "comment_owner": {
      "type": "number",
      "required": true
    },
    "reply_count": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "vote_up_count": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "vote_down_count": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "message_tags": {
      "type": [
        "number"
      ],
      "default": []
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "approved"
    }
  },
  "validations": [],
  "relations": {
