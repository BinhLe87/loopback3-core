{
  "name": "item",
  "plural": "items",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true,
    "BelongsToIntegrityCheck": false
  },
  "properties": {
    "title": {
      "type": "string"
    },
    "item_attributes": {
      "type": ["object"],
      "description": "an array of attribute objects"
    },
    "is_public": {
      "type": "boolean",
      "default": 1
    }
  },
  "hidden": ["createdAt", "updatedAt"],
  "validations": [],
  "relations": {
    "pages": {
      "type": "hasMany",
      "model": "page",
      "foreignKey": "itemId",
      "through": "page_item"
    },
    "attributes": {
      "type": "hasMany",
      "model": "attribute",
      "foreignKey": "itemId",
      "through": "item_attribute_template"
    },
    "itemtype": {
      "type": "belongsTo",
      "model": "item_type",
      "foreignKey": "item_typeId"
    }
  },
  "acls": [
    {
      "permission": "DENY",
      "principalType": "ROLE",
      "principalId": "$everyone"
    },
    {
      "permission": "ALLOW",
      "principalType": "ROLE",
      "principalId": "admin"
    }
  ],
  "methods": {}
}
