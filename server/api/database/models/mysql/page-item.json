{
  "name": "page_item",
  "base": "PersistedModel",
  "idInjection": true,
  "indexes": {
    "page_item_idx": {
      "keys": {
        "pageId": 1,
        "itemId": 1
      },
      "options": {
        "unique": true
      }
    }
  },
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "display_order_id": {
      "type": "number",
      "required": true,
      "default" : 0
    }
  },
  "scope": {
    "order": "display_order_id ASC"
  },
  "validations": [],
  "relations": {
    "page": {
      "type": "belongsTo",
      "model": "page",
      "foreignKey": "pageId"
    },
    "item": {
      "type": "belongsTo",
      "model": "item",
      "foreignKey": "itemId"
    }
  },
  "acls": [],
  "methods": {}
}
